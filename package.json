{
  "name": "somfy-synergy",
  "version": "1.4.0",
  "description": "Interface for the Somfy Synergy API (myLink).",
  "license": "MIT",
  "homepage": "https://github.com/yungsters/node-somfy-synergy",
  "bugs": {
    "url": "https://github.com/yungsters/node-somfy-synergy/issues"
  },
  "author": "Timothy Yung <yungsters@gmail.com>",
  "files": [
    "src/",
    "LICENSE"
  ],
  "main": "src/SomfySynergy.js",
  "repository": "yungsters/node-somfy-synergy",
  "eslintConfig": {
    "env": {
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "prettier": {
    "bracketSpacing": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "engines": {
    "node": ">=8.1.3"
  },
  "devDependencies": {
    "eslint": "^6.3.0",
    "husky": "^3.0.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.11.1"
  },
  "dependencies": {
    "net-keepalive": "^2.0.5",
    "socket-pool": "^1.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  }
}
